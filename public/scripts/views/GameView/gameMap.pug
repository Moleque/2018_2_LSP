mixin card(id, type)
    div(class= 'card', id= id)
        img(class= 'front-face', src= require('../../../img/water.png'))
        img(class= 'back-face', src= require('../../../img/'+ type + '.png'))

mixin base(player, color, count)
    div(class= 'card', id= 'base-' + player)
        img(class= 'front-face', src= require('../../../img/water.png'))
        img(class= 'back-face', src= require('../../../img/base.png'))
        - for (var pirate = 0; pirate < count; pirate++)
            img(id= 'pirate-' + player + '-' + pirate, class= 'pirate', src=require('../../../img/ships/' + color + '.png'))

mixin base_row(player, color, count)
    - var length = 3
    - for (var card = 0; card < length; card++)
        +card('gameCard', 'sand')
    +base(player, color, count)
    - for (var card = 0; card < length; card++)
        +card('gameCard', 'sand')

mixin field(size)
    - for (var row = 0; row < size; row++)
        +card('gameCard', 'sand')
        - for (var card = 1; card <= size; card++)
            +card('gamecard-'+ ((row*size)+card), 'unopened')
        +card('gameCard', 'sand')

secion(class='game-section')
    section(class='board', id='gameBoard')
        +base_row('0', 'red', 2)
        +field(5)
        +base_row('1', 'green', 2)
        
    section(id='gamePlayers')
        div Игрок 1
        div Игрок 2

    section(id='gameTimer')
        div(id='timer') 0
    